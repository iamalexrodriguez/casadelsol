<div class="center">
  <h2 class="center">Hola, administrador!</h2>

  <button class="btn waves-effect waves-light " type="submit" name="action">
    <i class="material-icons right"></i>
    <a href="/children/create" style="color:white">Agregar niño</a>
  </button>

  <div id="cont-detail">
  <div class="container">
    <div class="section">
      <div class="row">
        <div class="col 12">
          <div class="section">
            {{#each children as |child|}}
              <div class="col m4 s12">
                <div class="card hoverable">
                  <div class="card-image">
                    <img class="materialboxed" src="{{child.profilePic}}">
                    <a href="/children/detail/{{this._id}}" class="btn-floating halfway-fab waves-effect waves-light green"><i class="material-icons">face</i></a>
                  </div>
                  <div class="card-content">
                    <span class="card-title">{{child.name}}</span>
                  </div>
                </div>
              </div>         

            {{else}}
            <h2>Aún no hay niños.</h2>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>


<script
  src="https://code.jquery.com/jquery-3.3.1.slim.js"
  integrity="sha256-fNXJFIlca05BIO2Y5zh1xrShK3ME+/lYZ0j+ChxX2DA="
  crossorigin="anonymous">
</script>

