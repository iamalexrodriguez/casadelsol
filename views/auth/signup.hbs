<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  {{!-- Username --}}
  <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
    <label for="username">Nombre:</label>
    <input id="username" type="text" name="username">
    <span class="helper-text" data-error="wrong" data-success="right">JonSnow</span>
  </div>

  {{!-- Email --}}
  <div class="input-field col s6">
    <i class="material-icons prefix">mail</i>
    <label for="email">Email:</label>
    <input id="email" type="email" name="email">
    <span class="helper-text" data-error="wrong" data-success="right">example@email.com</span>
  </div>
  {{#if message}}
      <p style="color: red;">{{message}}</p>
  {{/if}}
  {{!-- Password --}}
  <div class="input-field col s6">
    <i class="material-icons prefix">vpn_key</i>
    <label for="password">Contrase√±a:</label>
    <input id="password" type="password" name="password">
    <span class="helper-text" data-error="wrong" data-success="right">Your password</span>
  </div>
  {{!-- messages --}}
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <button class="btn waves-effect waves-light">
    Create account
    <i class="material-icons right ">send</i>
  </button>

  <p class="account-message">
    Ya tienes una cuenta?
    <button class="btn waves-effect waves-light">
      <a href="/auth/login">Login</a>
    </button>
  </p>
  
</form>


