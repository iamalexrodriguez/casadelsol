<section class="center">
  <h2>Login</h2>
  <div class="container">

    {{#if err}}
    <p>{{err}}</p>
    {{/if}}

    <form action="/auth/login" method="POST" id="form-container">
      {{!-- Username --}}
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <label for="username">Email</label>
        <input id="username" type="text" name="email">
        <span class="helper-text" data-error="wrong" data-success="right">demo@ironhack.com</span>
      </div>

      {{!-- Password --}}
      <div class="input-field col s6">
        <i class="material-icons prefix">vpn_key</i>
        <label for="password">Password</label>
        <input id="password" type="password" name="password">
        <span class="helper-text" data-error="wrong" data-success="right">'123'</span>
      </div>

      {{!-- message --}}
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <button class="btn waves-effect waves-light ">Login
        <i class="material-icons right" onclick="M.toast({html: 'Usuario o contraseña incorrecto'})">send</i>
      </button>


      {{#if message}}
      <p style="color: red;">{{message}}</p>
      {{/if}}
    </form>

  </div>
  <p class="account-message">
    ¿Todavía no tienes una cuenta?
    <a href="/auth/signup" style="color: #018dc9">Signup</a>
  </p>
</section>

<script>
  M.toast({html: 'I am a toast!'})
</script>