<h2>Login</h2>

<form action="/auth/login" method="POST" id="form-container">
  {{!-- Username --}}
  <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
    <label for="username">Email</label>
    <input id="username" type="text" name="email">
    <span class="helper-text" data-error="wrong" data-success="right">example@email.com</span>
  </div>

  {{!-- Password --}}
  <div class="input-field col s6">
    <i class="material-icons prefix">vpn_key</i>
    <label for="password">Password</label>
    <input id="password" type="password" name="password">
    <span class="helper-text" data-error="wrong" data-success="right">Your password</span>
  </div>

  {{!-- message --}}
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <button class="btn waves-effect waves-light ">Login
    <i class="material-icons right">send</i>
  </button>

</form>

